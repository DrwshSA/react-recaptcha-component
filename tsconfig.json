{
    "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "es2015", "es2016", "es2017", "es2018"],
      "sourceMap": true,
      "jsx": "react",
      "declaration": true,
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "module": "commonjs",
    "outDir": "lib",
    },
  "include": [
      "src/**/*"
    ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
  